{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
    "image"
  ],
  "properties": {
    "image": {
      "type": "object",
      "required": [
        "repository",
        "pullPolicy"
      ],
      "properties": {
        "repository": {
          "type": "string",
          "pattern": "^[a-z0-9-_/.]+$"
        },
        "pullPolicy": {
          "type": "string",
          "pattern": "^(Always|Never|IfNotPresent)$"
        }
      }
    },
    "license_key": {
      "type": "string",
      "pattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
    },
    "auth": {
      "type": "object",
      "required": [
        "sasl"
      ],
      "properties": {
        "sasl": {
          "type": "object",
          "required": [
            "enabled",
            "users"
          ],
          "if": {
            "properties": {
              "enabled": {
                "enum": [
                  true
                ]
              }
            }
          },
          "then": {
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "users": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  },
                  "oneOf": [
                    {
                      "required": [
                        "name",
                        "password"
                      ]
                    },
                    {
                      "required": [
                        "name",
                        "secretName"
                      ]
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
